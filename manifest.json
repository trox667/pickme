{
  "manifest_version": 2,
  "name": "pickme",
  "version": "1.0",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["dist/index.js"],
      "css": ["dist/index.css"]
    },
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["dist/content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["dist/background.js"]
  }
}
